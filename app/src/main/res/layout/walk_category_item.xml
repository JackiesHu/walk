<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    >
    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/iv_pic"
        android:layout_width="107dp"
        android:layout_height="80dp"
        android:src="@mipmap/fengjing1"
        android:scaleType="center"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_toRightOf="@id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="洪洞美食街"
            android:textSize="18sp"
            android:textColor="@color/dark_back"
            />
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_walk_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步行数：4735"
                android:textSize="16sp"
                />
            <TextView
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="里程：980"
                android:textSize="16sp"
                android:id="@+id/tv_walk_mile"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步行品质:"
                android:textSize="16sp"
                />
            <com.buxingzhe.pedestrian.widget.MWTStarBar
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_walk_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                ></com.buxingzhe.pedestrian.widget.MWTStarBar>
            <TextView
                android:id="@+id/tv_walk_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5分"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_ad_yellow"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/se_b"
        />
</RelativeLayout>