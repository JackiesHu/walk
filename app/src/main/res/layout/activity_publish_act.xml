<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.buxingzhe.pedestrian.widget.TitleBarView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.buxingzhe.pedestrian.widget.TitleBarView>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="地点名称:重庆洪崖美食洞"
        android:textColor="@color/dark_back"
        android:textSize="18sp" />

    <include
        layout="@layout/item_line_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"></include>

    <LinearLayout
        android:id="@+id/addAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/munu_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="添加地点周边设施或景观图片"
            android:textColor="@color/dark_back"
            android:textSize="18sp" />
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:numColumns="3"></GridView>

    <include
        layout="@layout/item_line_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/munu_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="路径评分"
            android:textColor="@color/dark_back"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="街道活力"
            android:textColor="@color/dark_gray"
            android:textSize="14dp" />

        <com.buxingzhe.pedestrian.widget.MWTStarBar
            android:id="@+id/walkde_stress_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"></com.buxingzhe.pedestrian.widget.MWTStarBar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="环境舒适"
            android:textColor="@color/dark_gray"
            android:textSize="14dp" />

        <com.buxingzhe.pedestrian.widget.MWTStarBar
            android:id="@+id/walkde_environment_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"></com.buxingzhe.pedestrian.widget.MWTStarBar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步行安全"
            android:textColor="@color/dark_gray"
            android:textSize="14dp" />

        <com.buxingzhe.pedestrian.widget.MWTStarBar
            android:id="@+id/walkde_safety_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"></com.buxingzhe.pedestrian.widget.MWTStarBar>

    </LinearLayout>

    <include
        layout="@layout/item_line_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/munu_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="路径特点"
            android:textColor="@color/dark_back"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tag_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="点击添加标签"
        android:textColor="@color/dark_back"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="120dp">

        <com.buxingzhe.pedestrian.widget.FlowLayout
            android:id="@+id/localTag"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"></com.buxingzhe.pedestrian.widget.FlowLayout>
    </ScrollView>

    <include
        layout="@layout/item_line_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/munu_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="地理介绍"
            android:textColor="@color/dark_back"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="请描述下该地点"
        android:textColor="@color/dark_back"
        android:textSize="14sp" />
</LinearLayout>