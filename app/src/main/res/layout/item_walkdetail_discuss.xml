<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/bxz_10px">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:src="@mipmap/fengjing1"
        />
    <LinearLayout
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/iv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="熊熊"
                android:textColor="@color/dark_back"
                android:textSize="14sp"
                android:maxLength="20"
                />
            <com.buxingzhe.pedestrian.widget.MWTStarBar
                android:id="@+id/walkUserDis_starBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
            </com.buxingzhe.pedestrian.widget.MWTStarBar>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:text="夜间实在是太美丽了，美食也很好吃"
            />
    </LinearLayout>
</RelativeLayout>