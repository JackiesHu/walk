<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        >
        <com.buxingzhe.pedestrian.widget.CircularImageView
            android:id="@+id/cirImag_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fengjing1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@+id/cirImag_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="坏小孩"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/light_black"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-18"
                android:textSize="16sp"
                android:textColor="@color/drak_gray"
                />
             <com.buxingzhe.pedestrian.widget.MWTStarBar
                 android:id="@+id/star_bar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 >
             </com.buxingzhe.pedestrian.widget.MWTStarBar>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="400"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"
        android:text="夜景也太美丽了！美食也好好吃!夜景实在是太美了！美食也好好吃"
        />
    <ImageView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@mipmap/fengjing1"
        android:scaleType="fitXY"
        />
</LinearLayout>